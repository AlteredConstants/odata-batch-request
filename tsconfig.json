{
  "compilerOptions": {
    "outDir": "lib",
    "declaration": true,
    "target": "es5",
    "lib": ["esnext"],
    "sourceMap": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node"
  },
  "include": ["src/*"]
}
